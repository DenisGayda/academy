{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "angular-tslint-rules",
    "tslint-consistent-codestyle",
    "rxjs-tslint-rules"
  ],
  "rules": {
    "array-type": [
      true,
      "array"
    ],
    "adjacent-overload-signatures": true,
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "angular-whitespace": false,
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "arrow-return-shorthand": true,
    "ban": [
      true,
      "as",
      "fit",
      "fdescribe"
    ],
    "ban-comma-operator": true,
    "binary-expression-operand-order": true,
    "class-name": true,
    "callable-types": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "component-class-suffix": false,
    // TODO [Future] Дожить до документации
    "completed-docs": [
      false,
      {
        "enums": true,
        "functions": {"visibilities": ["exported"]},
        "methods": {"locations": "instance", "privacies": ["public", "protected"]},
        "properties": {
          "tags": {"content": {"see": ["#.*"]}, "existence": ["inheritdoc"]}
        }
      }
    ],
    "curly": true,
    "cyclomatic-complexity": [
      true,
      20
    ],
    "deprecation": true,
    "directive-selector": [
      true,
      false,
      "app",
      "camelCase"
    ],
    "directive-class-suffix": true,
    // TODO выставить флаг после 410
    "early-exit": false,
    "encoding": true,
    "eofline": true,
    "forin": true,
    "import-blacklist": [
      true,
      "rxjs"
    ],
    "import-spacing": true,
    "indent": [
      true,
      "spaces",
      4
    ],
    "interface-over-type-literal": true,
    "i18n": false,
    "jsdoc-format": true,
    "label-position": true,
    "max-classes-per-file": [
      true,
      1
    ],
    "max-line-length": [
      true,
      160
    ],
    "max-file-line-count": [
      true,
      700
    ],
    "member-access": false,
    "member-ordering": [
      true,
      "static-before-instance",
      "variables-before-functions"
    ],
    "new-parens": true,
    "newline-before-return": true,
    "newline-per-chained-call": false,
    "no-any": true,
    "no-duplicate-imports": true,
    "no-require-imports": true,
    "no-default-export": true,
    "no-reference": true,
    "no-unused-variable": [true, {"ignore-pattern": "^[A-Z]+[A-Za-z0-9_$]*"}],
    "no-forward-ref": false,
    "no-invalid-this": true,
    "no-duplicate-super": true,
    "no-misused-new": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [
      true,
      "log",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    // FIXME [AutoUnsubscribe] поменять флаг, когда не нужно будет добавлять пустой метод ngOnDestroy
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-unsafe-finally": true,
    "no-trailing-whitespace": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-conditional-assignment": true,
    "no-sparse-arrays": true,
    "no-inferrable-types": true,
    "no-internal-module": true,
    "no-magic-numbers": [true, -2, -1, 0, 1, 2],
    "no-unnecessary-type-assertion": true,
    // делаем всё наоборот
    "no-angle-bracket-type-assertion": false,
    "no-as-type-assertion": true,
    "no-collapsible-if": true,
    "no-else-after-return": true,
    "no-return-undefined": true,
    "no-static-this": true,
    "no-unnecessary-else": true,
    "no-object-literal-type-assertion": true,
    "no-boolean-literal-compare": true,
    "no-null-keyword": false,
    "no-consecutive-blank-lines": [
      true,
      1
    ],
    "no-output-rename": true,
    "no-input-rename": false,
    "no-duplicate-variable": [
      true,
      "check-parameters"
    ],
    "no-unnecessary-initializer": true,
    "no-invalid-template-strings": true,
    "no-implicit-dependencies": false,
    "no-output-named-after-standard-event": false,
    "no-redundant-jsdoc": false,
    "no-output-on-prefix": false,
    "no-access-missing-member": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "object-literal-shorthand": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "prefer-const-enum": true,
    "prefer-method-signature": true,
    "prefer-object-spread": false,
    "prefer-conditional-expression": false,
    "prefer-for-of": true,
    "prefer-const": true,
    "pipe-naming": [
      false,
      "camelCase"
    ],
    "prefer-function-over-method": false,
    "prefer-template": true,
    "quotemark": [
      true,
      "single"
    ],
    "radix": true,
    "switch-default": true,
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "trackBy-function": false,
    "unified-signatures": true,
    "use-isnan": true,
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "use-life-cycle-interface": true,
    "use-view-encapsulation": true,
    "use-pipe-transform-interface": true,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "rxjs-no-unsafe-catch": true,
    "rxjs-no-unsafe-switchmap": true,
    "rxjs-no-unsafe-takeuntil": true,
    "rxjs-no-subject-unsubscribe": true,
    "rxjs-throw-error": true,
    "rxjs-finnish": {
      "options": [{
        "functions": true,
        "methods": true,
        "parameters": true,
        "properties": false,
        "variables": true
      }],
      "severity": "error"
    }
  }
}
